{
  "name": "a3x-root",
  "version": "0.1.0",
  "private": true,
  "description": "Root package for running A3X components together",
  "scripts": {
    "start:llama": "bash ./start_llama_server.sh",
    "start:api": "source venv/bin/activate && uvicorn a3x.api.main:app --host 0.0.0.0 --port 8000",
    "start:ui": "cd frontend && npm run dev",
    "start:all": "concurrently -n llama,api,ui -c auto --kill-others-on-fail \"npm:start:llama\" \"npm:start:api\" \"npm:start:ui\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "contributes": {
    "commands": [
      {
        "command": "a3x.runTask",
        "title": "A³X: Executar Task",
        "category": "A³X"
      },
      {
        "command": "a3x.showPanel",
        "title": "A³X: Mostrar Painel",
        "category": "A³X"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "a3x-sidebar",
          "title": "A³X Assistant",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "a3x-sidebar": [
        {
          "id": "a3x-chat",
          "name": "Chat"
        }
      ]
    }
  }
} 